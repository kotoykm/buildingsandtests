<%= render @building %>




<% if current_client.present? && (current_client.role == "admin") %>

  <div>
    <%= link_to "Edit this building", edit_building_path(@building) %> |
    <%= link_to "Back to buildings", buildings_path %>

    <%= button_to "Destroy this building", @building, method: :delete %>
  </div>

<%else%>
  <%= link_to "Back to buildings", buildings_path %>
<%end%>